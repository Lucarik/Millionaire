<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundb"
    tools:context=".Winner">

    <TextView
        android:id="@+id/rWin1"
        android:layout_width="394dp"
        android:layout_height="177dp"
        android:layout_marginBottom="596dp"
        android:gravity="center"
        android:text="Congrats! You are a"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rWin2"
        android:layout_width="616dp"
        android:layout_height="0dp"
        android:layout_marginTop="397dp"
        android:layout_marginBottom="447dp"
        android:gravity="center"
        android:text="Millionaire!"
        android:textColor="#6fe890"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/rStart1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="227dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Total Earned:"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rTotalW"
        android:layout_width="237dp"
        android:layout_height="83dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="$0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rStart1"
        android:layout_width="598dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Return to Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rWin2" />
</androidx.constraintlayout.widget.ConstraintLayout>