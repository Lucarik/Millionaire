<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgr"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="551dp"
        android:layout_height="163dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="97dp"
        android:gravity="center_horizontal"
        android:text="Who Wants to be a Millionaire!"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/beginB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/beginB"
        android:layout_width="239dp"
        android:layout_height="73dp"
        android:layout_marginBottom="342dp"
        android:text="Begin Game"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/ibutton"
        android:layout_width="543dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:background="@null"
        android:text="View Instructions"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.507"
        tools:text="View Instructions" />

</androidx.constraintlayout.widget.ConstraintLayout>