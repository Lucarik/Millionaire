<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <TextView
        android:id="@+id/rRes1"
        android:layout_width="364dp"
        android:layout_height="94dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="Congrats! You are a"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/rRes2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rTotal" />

    <TextView
        android:id="@+id/rRes2"
        android:layout_width="272dp"
        android:layout_height="86dp"
        android:layout_marginBottom="268dp"
        android:gravity="center"
        android:text="Millionaire!"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/rStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rTotal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="227dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:text="Total Earned:"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/rTotal"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rTotal"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="150dp"
        android:text="$0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/rRes2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rStart"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="Return to Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rRes2" />
</androidx.constraintlayout.widget.ConstraintLayout>