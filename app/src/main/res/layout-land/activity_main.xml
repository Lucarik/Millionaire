<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgr"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="389dp"
        android:layout_height="113dp"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="53dp"
        android:gravity="center_horizontal"
        android:text="@string/who_wants_to_be_a_millionaire"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/beginB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/beginB"
        android:layout_width="263dp"
        android:layout_height="62dp"
        android:layout_marginBottom="2dp"
        android:text="@string/begin_game"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ibutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/ibutton"
        android:layout_width="246dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:background="@null"
        android:text="@string/view_instructions"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beginB"
        tools:text="View Instructions" />


</androidx.constraintlayout.widget.ConstraintLayout>